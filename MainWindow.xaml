<Window x:Class="comboBox.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:comboBox"
        mc:Ignorable="d"
        Title="Program selector" Height="450" Width="800">
    <Canvas Height="434" VerticalAlignment="Center" HorizontalAlignment="Left" Width="800">
        <ComboBox x:Name="comboBox" Grid.Column="1" ItemsSource="{Binding programs}" Height="29" Canvas.Left="382" Canvas.Top="153" Width="298" HorizontalAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center" />
        <Button x:Name="select" Content="Open program" HorizontalAlignment="Left" VerticalAlignment="Top" Width="173" Click="select_Click" Grid.Column="1" Height="40" Canvas.Left="298" Canvas.Top="241" Background="#FFB5E8F9" FontSize="16"/>
        <Label Grid.Column="1" Content="Welcome to program selector" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="36" FontWeight="Bold" Height="80" Width="560" Canvas.Left="120" Canvas.Top="40"/>
        <Label Grid.Column="1" Content="Select from the dropdown list the program of your choice:" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26" Width="318" Canvas.Left="35" Canvas.Top="151"/>
    </Canvas>
</Window>
